}

-----------------------------------------------------------------------MAIN.JS-------------------------------------------------

// Carrinho de compras
let cart = [];

function addToCart(productName, price) {
    cart.push({ productName, price });
    alert(`${productName} adicionado ao carrinho!`);
    console.log(cart);
}



